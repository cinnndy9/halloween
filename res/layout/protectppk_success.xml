<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/level3_success"
    android:orientation="vertical" >   
    
   <Button 
       android:id="@+id/back_to_proppk"
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:layout_marginLeft="80dp"
       android:layout_marginTop="90dp"
       android:background="@drawable/restart"
       />
   <Button 
       android:id="@+id/level3_success_chooselevel"
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:layout_marginLeft="130dp"
       android:layout_marginTop="90dp"
       android:background="@drawable/menu"
       />
   <ImageView 
       android:id="@+id/leftppk1"
       android:layout_width="55dp"
       android:layout_height="55dp"
       android:layout_marginLeft="200dp"
       android:layout_marginTop="150dp"
       android:src="@drawable/pumpkin"
       />
   <ImageView 
       android:id="@+id/leftppk2"
       android:layout_width="55dp"
       android:layout_height="55dp"
       android:layout_marginLeft="160dp"
       android:layout_marginTop="170dp"
       android:src="@drawable/pumpkin"
       />
   <ImageView 
       android:id="@+id/leftppk3"
       android:layout_width="55dp"
       android:layout_height="55dp"
       android:layout_marginLeft="240dp"
       android:layout_marginTop="170dp"
       android:src="@drawable/pumpkin"
       />
   <ImageView 
       android:id="@+id/leftppk4"
       android:layout_width="55dp"
       android:layout_height="55dp"
       android:layout_marginLeft="200dp"
       android:layout_marginTop="180dp"
       android:src="@drawable/pumpkin"
       />
   <TextView 
       android:id="@+id/level3_txt1"
       android:layout_width="180dp"
       android:layout_height="50dp"
       android:layout_marginLeft="60dp"
       android:layout_marginTop="25dp"
       android:text="You Win!"
       android:textSize="42sp"
       android:textColor="#FFD801"
       android:textStyle="bold"
       android:shadowColor="#000000"
       android:shadowDx="2"
       android:shadowDy="2"
       android:shadowRadius="3"
       />
   <TextView 
       android:id="@+id/level3_txt2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="40dp"
       android:layout_marginTop="190dp"
       android:textSize="20sp"
       android:textColor="#AF7817"
       android:textStyle="bold"
       android:text="You harvest:"
       />
       </RelativeLayout>
