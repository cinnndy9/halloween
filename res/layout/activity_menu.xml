<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/chooselevelbackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnLevelCandy"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/btnHome"
        android:layout_alignParentBottom="true"
        android:background="@drawable/level_candy" />
    

    <Button
        android:id="@+id/btnLevelWitch"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/btnHome"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/btnHome"
        android:background="@drawable/level_witch" />

    <Button
        android:id="@+id/btnHome"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/home" />

    <Button
        android:id="@+id/btnLevelBat"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBaseline="@+id/btnLevelCandy"
        android:layout_alignBottom="@+id/btnLevelCandy"
        android:layout_marginLeft="34dp"
        android:layout_toRightOf="@+id/btnLevelCandy"
        android:background="@drawable/level_bat" />

    <Button
        android:id="@+id/btnPlayMusic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/btnLevelBat"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/music" />

</RelativeLayout>